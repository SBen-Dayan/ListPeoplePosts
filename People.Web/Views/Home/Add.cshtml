@{
    ViewData["Title"] = "New Person";
}

<div class="row mt-5 bg-light p-3">
    <div class="col-md-12">
        <button id="add-row" class="btn btn-dark">Add row</button>
        <form style="margin-top: 10px;" method="post" action="/home/add" class="mt-3">
            <div id="input-rows">
                <div id="0" class="row person-row" style="margin-bottom: 10px;">
                    <div class="col-md-4">
                        <input class="form-control first-name" type="text" name="people[0].firstname" placeholder="First Name" />
                    </div>
                    <div class="col-md-4">
                        <input class="form-control last-name" type="text" name="people[0].lastname" placeholder="Last Name" />
                    </div>
                    <div class="col-md-2">
                        <input class="form-control age" type="text" name="people[0].age" placeholder="Age" />
                    </div>
                    <div class="col-md-2">
                        <button type="button" data-id="0" class="btn btn-danger delete">Delete</button>
                    </div>
                </div>
            </div>
            <button class="btn btn-primary mt-3">Submit</button>
        </form>
    </div>
</div>

@section scripts {
    <script src="~/js/Form.js"></script>
}